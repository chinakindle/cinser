<UserControl x:Class="Cinser.ArcGIS.Controls.LegendUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:Cinser.ArcGIS.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="LayoutRoot">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <my:LayerTransparencySet x:Name="LayerTransparencySetUI1" Grid.Row="0"/>
            <my:MapLayersTree Grid.Row="1" Margin="-5,-5,-5,0" Background="Transparent" BorderThickness="0,0,0,0"  x:Name="MapLayersTree1"/>

        </Grid>
    </Grid>
</UserControl>
